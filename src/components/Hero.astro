---
const { text } = Astro.props;
---

<section class="hero-section">
    <p class="hero-text" set:html={text}></p>
</section>

<style>
    .hero-section {
        background: rgb(from var(--surface) r g b / 0.9);
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgb(from var(--surface) r g b / 0.8);
        margin-bottom: 50px;
        animation: slideUp 1s ease-out;
    }

    .hero-text {
        font-size: 1.25em;
        line-height: 1.8;
        color: var(--text);
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
    }
</style>
