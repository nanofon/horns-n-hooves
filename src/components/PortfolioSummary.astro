---
import { fetchLTMReturns } from '../api';
import Chart from './Chart.astro';

export type Props = {
  ID: number;
  Name: string;
  Description: string;
  Data?: number[];
  Labels?: string[];
};

const { ID, Name, Description } = Astro.props;

const { Values } = await fetchLTMReturns(ID);

const Labels = Object.keys(Values).map(date => new Date(date).toLocaleString('default', {month: 'short', year: 'numeric'}));
const Data = Object.values(Values);
---
<a href=`/portfolios/${ID}` class="portfolio-summary">
  <div class="portfolioSummary__inner">
    <h2 class="title">{Name}</h2>
    <div class="subtitle">{Description}</div>
    <Chart data={Data} labels={Labels}/>
    <div>
      <p>Last 12 month return and stddev</p>
      <p>Sharpe ratio</p>
    </div>
    <div class="portfolioSummary__footer">&rarr;</div>
  </div>
</a>

<style>
  .portfolio-summary {
    --radius: 10px;
    padding: 4px;
    border-radius: var(--radius);
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    display: block;
    height: 100%;
  }

  .portfolio-summary:hover {
    transform: scale(1.05);
  }

  .portfolioSummary__inner {
    background-color: rgb(from var(--surface) r g b / 0.9);
    padding: 1.5rem;
    border-radius: var(--radius);
    display: flex;
    flex-direction: column;
    color: var(--accent);
    height: 100%;
    box-sizing: border-box;
  }

  .portfolioSummary__footer {
    margin: auto 0 0 auto;
    padding-top: 2rem;
    font-size: 1.2rem;
    color: var(--accent);
  }
</style>
