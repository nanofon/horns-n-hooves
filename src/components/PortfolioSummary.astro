---
import { fetchLTMReturns } from "../api";
import Chart from "./Chart.astro";

export type Props = {
  ID: number;
  Name: string;
  Description: string;
  RiskLevelID: number;
  Data?: number[];
  Labels?: string[];
};

const { ID, Name, Description, RiskLevelID } = Astro.props;

const { Values } = await fetchLTMReturns(ID);

const Labels = Object.keys(Values).map((date) =>
  new Date(date).toLocaleString("default", { month: "short", year: "numeric" }),
);
const Data = Object.values(Values);
---

<a href=`/portfolios/${ID}` class="portfolio-summary">
  <div class="portfolioSummary__inner">
    <h3 class="title">{Name}</h3>
    <Chart data={Data} labels={Labels} />
    <h2>Risk: {[...Array(RiskLevelID).keys()].map(id => "ðŸ”¥")}</h2>
    <p class="subtitle">{Description}</p>
    <div class="portfolioSummary__footer">&rarr;</div>
  </div>
</a>

<style>
  .portfolio-summary {
    --radius: 10px;
    padding: 0.5rem;
    border-radius: var(--radius);
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    box-sizing: border-box;
  }

  .portfolio-summary:hover {
    transform: scale(1.05);
  }

  .portfolioSummary__inner {
    background-color: rgb(from var(--surface) r g b / 0.9);
    padding: 1.5rem;
    border-radius: var(--radius);
    display: flex;
    flex-direction: column;
    color: var(--accent);
    height: 100%;
    box-sizing: border-box;
  }

  .portfolioSummary__footer {
    margin: auto 0 0 auto;
    padding-top: 2rem;
    font-size: 1.2rem;
    color: var(--accent);
  }

  .title {
    display: block;
  }
</style>
